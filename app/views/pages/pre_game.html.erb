<div id="container">
  <header id="header">
    <div class="wia-logo"></div>
  </header>
  <div id="content">
    <div class="start">
    <!-- Start Pre-Game Carousel -->
      <div class="pre-game-content">
        <div class="pre-game-slides">
          <ul class="slides">
            <!-- Slide 1 -->
              <li>
                <figure>
                  <%= image_tag "illinois.png", width: "130" %>
                </figure>
                <h2>Each question reveals 10 states <br>as possible answers</h2>
              </li>
              <!-- Slide 2 -->
              <li>
                <figure>
                  <%= image_tag "florida.png", width: "250" %>
                </figure>
                <h2>Feeling confident? Tap the state<br> and "Submit" your answer.</h2>
              </li>
              <!-- Slide 3 -->
              <li>
                <%= link_to page_path('countdown') do %>
                  <figure>
                    <%= image_tag "timer.png", width: "220" %>
                  </figure>
                  <h2>But hurry... you've got 10 seconds<br> for each question</h2>
                <% end %>
              </li>
            </div>
          </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  console.log('pre game slider starts')
  $('.pre-game-slides').flexslider({
    animation: 'slide',
    slideshow: false,
    selector: '.slides > li',
    itemWidth: 1000,
    directionNav: false,
    start: function(){

      // Make sure background is resized to accomodate for area occupied
      // by the slider.
      $(window).trigger('resize');
    }
  })

</script>